<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerHandFragment">

    <ImageView
        android:id="@+id/dealerCardPos0"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/dealerCardPos1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gray_back" />

    <ImageView
        android:id="@+id/dealerCardPos1"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/dealerCardPos2"
        app:layout_constraintStart_toEndOf="@+id/dealerCardPos0"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gray_back" />

    <ImageView
        android:id="@+id/dealerCardPos2"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/dealerCardPos3"
        app:layout_constraintStart_toEndOf="@+id/dealerCardPos1"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/dealerCardPos3"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/dealerCardPos4"
        app:layout_constraintStart_toEndOf="@+id/dealerCardPos2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dealerCardPos4"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@+id/dealerCardPos3"
        app:layout_constraintEnd_toStartOf="@+id/dealerCardPos5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dealerCardPos5"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@+id/dealerCardPos4"
        app:layout_constraintEnd_toStartOf="@id/dealerCardPos6"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/dealerCardPos6"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@+id/dealerCardPos5"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>