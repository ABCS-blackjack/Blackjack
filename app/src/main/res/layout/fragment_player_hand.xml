<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerHandFragment">

    <ImageView
        android:id="@+id/playerCardPos0"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/playerCardPos1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gray_back" />

    <ImageView
        android:id="@+id/playerCardPos1"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/playerCardPos2"
        app:layout_constraintStart_toEndOf="@+id/playerCardPos0"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gray_back" />

    <ImageView
        android:id="@+id/playerCardPos2"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/playerCardPos3"
        app:layout_constraintStart_toEndOf="@+id/playerCardPos1"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/playerCardPos3"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/playerCardPos4"
        app:layout_constraintStart_toEndOf="@+id/playerCardPos2"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/playerCardPos4"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@+id/playerCardPos3"
        app:layout_constraintEnd_toStartOf="@+id/playerCardPos5"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/playerCardPos5"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@+id/playerCardPos4"
        app:layout_constraintEnd_toStartOf="@id/playerCardPos6"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/playerCardPos6"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@+id/playerCardPos5"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/playerDoubleDownCard"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:rotation="90"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/playerCardPos0"
        app:layout_constraintEnd_toEndOf="@+id/playerCardPos1"
        app:layout_constraintStart_toStartOf="@+id/playerCardPos0"
        app:srcCompat="@drawable/gray_back" />

</androidx.constraintlayout.widget.ConstraintLayout>